<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#f9fafc">

    <TextView
        android:id="@+id/settings_title"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 등록" />

    <ImageView
        android:id="@+id/settings_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/settings_title"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/settings_sq"/>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="이름 : "
        android:layout_toRightOf="@+id/settings_image"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_title"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="60dp"
        android:hint="이름을 입력하세요."/>

    <TextView
        android:id="@+id/special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:text="특별관리 : "/>

    <RadioGroup
        android:id="@+id/rdgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="180dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radio_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="등록"/>
        <RadioButton
            android:id="@+id/radio_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미등록"/>
    </RadioGroup>


    <TextView
        android:id="@+id/image_register"
        android:text="* 사용자 이미지"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_image"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/Img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/image_register"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/settings_sq" />

    <Button
        android:id="@+id/btn_save"
        android:layout_marginTop="330dp"
        android:layout_below="@+id/image_register"
        android:layout_marginLeft="130dp"
        android:text="저장"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@drawable/send_button"/>

</RelativeLayout>
